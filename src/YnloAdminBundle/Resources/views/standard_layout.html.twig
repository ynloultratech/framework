{% set _preview              = block('preview') %}
{% set _form                 = block('form') %}
{% set _show                 = block('show') %}
{% set _list_table           = block('list_table') %}
{% set _list_filters         = block('list_filters') %}
{% set _tab_menu             = block('tab_menu') %}
{% set _content              = block('content') %}
{% set _title                = block('title') %}
{% set _breadcrumb           = block('breadcrumb') %}
{% set _actions              = block('actions') %}
{% set _navbar_title         = block('navbar_title') %}
{% set _list_filters_actions = block('list_filters_actions') %}

{% block html %}
    <!DOCTYPE html>
    <html lang="en" dir="ltr" {% block html_attributes %}class="no-js"{% endblock %}>

    {% include 'YnloAdminBundle:Chunks/Layout:head.html.twig' %}

    {% block body %}
        <body {% block body_attributes %}class="{% for class in admin_body_classes %}{{ class }} {% endfor %}"{% endblock %}>

        <!-- Main Header -->
        {% block main_header %}
            {% include 'YnloAdminBundle:Chunks/Layout:main_header.html.twig' %}
        {% endblock %}

        <div {% block page_wrappper_attributes %}class="wrapper" id="pjax-container"{% endblock %}>

            {% block page_wrapper_content %}

                {% block main_sidebar %}
                    <!-- Left side column. contains the logo and sidebar -->
                    {% include 'YnloAdminBundle:Chunks/Layout:main_sidebar.html.twig' %}
                {% endblock %}

                {% block content_wrapper %}
                    <!-- Content Wrapper. Contains page content -->
                    <div class="content-wrapper">
                        {% include 'YnloAdminBundle:Chunks/Layout:content_header.html.twig' %}

                        <!-- Main content -->
                        {% include 'YnloAdminBundle:Chunks/Layout:content.html.twig' %}
                        <!-- /.content -->
                    </div>
                {% endblock %}
                <!-- /.content-wrapper -->

                <!-- Main Footer -->
                {% block main_footer %}
                    {% include 'YnloAdminBundle:Chunks/Layout:main_footer.html.twig' %}
                {% endblock %}

                {% block control_sidebar %}
                    {% include 'YnloAdminBundle:Chunks/Layout:control_sidebar.html.twig' %}
                {% endblock %}

            {% endblock page_wrapper_content %}
        </div>
        <!-- ./wrapper -->
        {% block override_default_pjax_container %}
            <script>
                $(document).on('ready pjax:success', function () {
                    //override default Pjax container for admins
                    //when come from login the container is body, after that
                    //the container it the following
                    YnloFramework.Pjax.config.target = '#pjax-container';
                })
            </script>
        {% endblock %}
        </body>
    {% endblock body %}
    </html>
{% endblock html %}
